{
  "manifest_version": 2,
  "name": "Secret Decoder Ring - GeekWisdom.org",
  "version": "0.1",
  "description": "Secret Decoder 'Ring'. Leave secret messags on web pages for others.",
   "options_ui": {
    "page": "settings.html",
    "open_in_tab": false
  },
"permissions": [
          "storage",
	  "https://*/"
        ],
"icons": { "128": "gw128.png" },
  "content_scripts": [
  {
    "matches": [
      "<all_urls>"
    ],
    "js": ["content.js"]
  }
],
"browser_action": {
  "default_icon": "gw.png"
}
}